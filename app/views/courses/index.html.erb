<div class="container contmargin">
	<h1>Courses</h1>

	<table class="table table-striped table-bordered">
		<thead>
			<th class="col-md-3 text-center">Course</th>
			<th class="col-md-4 text-center">Description</th>
			<th class="col-md-3 text-center">Author</th>
			<th class="col-md-2 text-center">Action</th>
		</thead>
		<tbody>
			<% @courses.each do |course| %>
				<tr class="text-center">  
					<td><%= course.name %></td>
					<td><%= course.description %></td>
					<td><%= course.owner.email %></td>
					<% if course.owner_id == current_user.id %>
						<td></td>
					<% else %>
						<td>
							<% if current_user.courses.include? course %>
								<%= link_to "Unsubscribe", courses_unsubscribe_path(course_id: course.id) %>
							<% else  %>
								<%= link_to "Subscribe", courses_subscribe_path(course_id: course.id) %>
							<% end %>
						</td>
					<% end %>
				</tr>	
			<% end %>
				
		</tbody>
	</table>

	<%= link_to "Create Course", new_course_path, class:"btn btn-info" %>
</div>

