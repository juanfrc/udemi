<h1>Courses</h1>
<%= link_to "My courses", courses_teacher_path %>

<table>
	<thead>
		<th>Course</th>
		<th>Description</th>
		<th>Author</th>
		<th>Action</th>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
			<tr>  
				<td><%= course.name %></td>
				<td><%= course.description %></td>
				<td><%= course.owner.email %></td>
				<% if course.owner_id == current_user.id %>
					<td></td>
				<% else %>
					<td>
						<% if current_user.courses.include? course %>
							<%= link_to "Unsubscribe", courses_unsubscribe_path(course_id: course.id) %>
						<% else  %>
							<%= link_to "Subscribe", courses_subscribe_path(course_id: course.id) %>
						<% end %>
					</td>
				<% end %>
			</tr>	
		<% end %>
			
	</tbody>
</table>

<%= link_to "Create Course", new_course_path %>